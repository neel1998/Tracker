<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.customgraph.tracker.Information"
    android:padding="10dp">
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="1."
        android:textSize="42sp"
        android:id="@+id/num1"
        />
    <ImageView
        android:src="@drawable/alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_alignLeft="@+id/num1"
        android:id="@+id/img1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Select \nNotification time"
        android:textSize="24sp"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="2."
        android:textSize="42sp"
        android:id="@+id/num2"
        android:layout_below="@+id/img1"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:src="@drawable/calender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_alignLeft="@+id/num2"
        android:layout_below="@+id/img1"
        android:layout_marginTop="10dp"
        android:id="@+id/img2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/img1"
        android:layout_marginTop="10dp"
        android:text="Select \nDate and tell\nHow did you Study?"
        android:textSize="20sp"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="3."
        android:textSize="42sp"
        android:id="@+id/num3"
        android:layout_below="@+id/img2"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:src="@drawable/chart2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_alignLeft="@+id/num3"
        android:layout_below="@+id/img2"
        android:id="@+id/img3"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="See \nMonthly Analysis"
        android:textSize="24sp"
        android:layout_below="@+id/img2"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@id/img3"/>
</RelativeLayout>
