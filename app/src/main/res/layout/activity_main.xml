<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.customgraph.tracker.MainActivity"

    >


  <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/btn"
      android:src="@drawable/calender"
      android:layout_marginTop="10dp"
      android:layout_centerHorizontal="true"
      android:padding="0dp"
      android:layout_marginBottom="5dp"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/btn"
      android:text="Go to Calender"
      android:textSize="20dp"
      android:layout_centerHorizontal="true"
      android:id="@+id/txt1"
      android:layout_marginBottom="10dp"/>

  <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/chart2"
      android:id="@+id/analysis_btn"
      android:layout_below="@+id/txt1"
      android:layout_centerHorizontal="true"
      android:padding="0dp"
      android:layout_marginBottom="5dp"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/analysis_btn"
      android:text="See Analysis"
      android:textSize="20dp"
      android:layout_centerHorizontal="true"
      android:id="@+id/txt2"
      android:layout_marginBottom="10dp"/>
  <ImageButton
      android:src="@drawable/alarm"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/time_btn"
      android:layout_below="@+id/txt2"
      android:layout_centerHorizontal="true"
      android:padding="0dp"
      android:layout_marginBottom="5dp"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/time_btn"
      android:text="Set Notification Time"
      android:textSize="20dp"
      android:layout_centerHorizontal="true"
      android:id="@+id/txt3" />
  <android.support.design.widget.FloatingActionButton
      android:padding="0dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_alignParentBottom="true"
      android:layout_margin="10dp"
      android:backgroundTint="@color/colorPrimaryDark"
      android:src="@drawable/info"
      android:id="@+id/fab"
      />
</RelativeLayout>
